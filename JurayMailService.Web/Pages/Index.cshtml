<div class="form-area" id="form-area">
    <div class="container">
        <div class="form-area-box-outer">
            <div class="form-area-box">

                <!-- Heading -->
                <div class="section-head">
                    <div class="row text-center">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <h3>Start Sending in Minutes</h3>
                            <p>
                                Enter your email to get started with JBUZZ. We'll contact you with setup support or send you updates on how to activate your free account.
                            </p>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>

                <!-- Form -->
                <div class="row">
                    <div class="col-md-2 col-sm-3"></div>
                    <div class="col-md-8 col-sm-6">
                        <div class="form">
                            <form id="" class="contact-form text-center" role="form" method="POST">

                                <!-- Success Message -->
                                <h6 class="success" style="display:none;">
                                    <span class="colored-text icon_check"></span>
                                    Thank you! We'll be in touch shortly.
                                </h6>

                                <!-- Error Message -->
                                <h6 class="error" style="display:none;">
                                    <span class="colored-text icon_error-circle_alt"></span>
                                    Please enter a valid email address.
                                </h6>

                                <div class="row">
                                    <div class="col-md-8 no-padding">
                                        <input id="cf-email" type="email" name="email" placeholder="Enter your email address" required>
                                    </div>
                                    <div class="col-md-4 no-padding">
                                        <input type="submit" class="button dark-blue no-shadow jbuzz-primary" value="Notify Me" id="submit" name="submit">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-3"></div>
                </div>

                <!-- Payment Logos -->
                <div class="row text-center">
                    <div class="col-md-12">
                        <p>We Accept</p>

                        <ul class="payment-methods" style="list-style: none; padding-left: 0; text-align: center;">
                            <li><i class="fas fa-credit-card"></i> Paystack</li>
                            <li><i class="fas fa-money-bill-wave"></i> Flutterwave</li>
                            <li><i class="fab fa-cc-visa"></i> Visa</li>
                            <li><i class="fab fa-cc-mastercard"></i> Mastercard</li>
                        </ul>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

 
