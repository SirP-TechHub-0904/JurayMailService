@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="home-area parallax" style="background-position: 50% 0px;background: url(../img/j-buzz-home.jpg) fixed; ">
    <div class="container">
        <div class="top-bar">
            <div class="row">
                <div class="col-md-6 col-sm-6 mobile-center">
                    <div class="logo">
                        <a href="/">
                            <img src="~/img/logo-white.png" alt="JBUZZ Logo">
                        </a>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 text-right mobile-center">
                    <a asp-page="/Account/Login" asp-area="Identity" class="button red jbuzz-primary">
                        Login
                    </a>
                    <a href="mailto:support@jbuzz.africa" class="button red jbuzz-secondary">
                        Support <img src="~/web/support.png" alt="Support Icon">
                    </a>
                </div>
            </div>
        </div>

        <div class="home-more-area">
            <div class="row">
                <div class="col-md-6 tab-center">
                    <img src="~/img/j-buzz-home.png" alt="Messaging Dashboard Preview">
                </div>
                <div class="col-md-6 text-center">
                    <div class="home-right">
                        <div class="featured-offer">
                            <div class="featured-offer-innr">
                                <p>Start Free</p>
                                <h3><span>₦</span>0</h3>
                                <p>/Month</p>
                            </div>
                        </div>
                        <h6>
                            Email & SMS Marketing Made Simple
                        </h6>
                        <h2>Send Smarter with JBUZZ</h2>
                        <h5>smtp // jbuzz domain // campaign reports</h5>
                        <ul>
                            <li>
                                <a href="#more-feature" class="button orange more-feature jbuzz-primary jbuzz-bg-primary">Explore Features</a>
                            </li>
                            <li>
                                <a href="#pricing" class="button blue go-form jbuzz-secondary jbuzz-text-primary jbuzz-border-primary">Get Started Free</a>
