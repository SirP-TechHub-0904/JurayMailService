<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>JBuzz | Email & Bulk SMS Solutions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Helvetica Neue', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
        }

        section {
            padding: 60px 0;
        }

        .button {
            padding: 10px 20px;
            display: inline-block;
            margin: 10px;
            border-radius: 5px;
            color: #fff;
            text-decoration: none;
        }

            .button.orange {
                background: #f90;
            }

            .button.blue {
                background: #007BFF;
            }

        .footer-bar {
            background: #333;
            color: #fff;
            padding: 20px 0;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="home-area text-center">
        <div class="container">
            <h1>Smart Business Communication Starts with JBuzz</h1>
            <p>Send branded emails and bulk SMS with ease. Get fast delivery, high reliability, and scalable tools designed for growing businesses.</p>
            <h3><strong>Starting at $2.99/month</strong></h3>
            <a href="#services" class="button orange">Explore Services</a>
            <a href="#get-started" class="button blue">Get Started Now</a>
        </div>
    </section>

    <!-- Key Benefits -->
    <section class="features-area text-center">
        <div class="container">

            @RenderBody()

        </div>
    </section>



    <!-- Contact -->
    <section id="contact" class="text-center">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Email: support@jbuzz.com</p>
            <p>Phone: +234 800 123 4567</p>
            <form>
                <input type="email" placeholder="Your Email" class="form-control" required><br>
                <textarea placeholder="Your Message" class="form-control"></textarea><br>
                <button type="submit" class="button blue">Send Message</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer-bar text-center">
        <div class="container">
            <p>© 2025 JBuzz.com – All Rights Reserved</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

</body>
</html>
