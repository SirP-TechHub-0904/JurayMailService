@page
@model JurayMailService.Web.Areas.Admin.Pages.PlansPage.AddModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">CREATE NEW PLAN</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label asp-for="Plan.Name" class="control-label"></label>
                        <input asp-for="Plan.Name" class="form-control" />
                        <span asp-validation-for="Plan.Name" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="Plan.MonthlyLimit" class="control-label"></label>
                        <input asp-for="Plan.MonthlyLimit" class="form-control" />
                        <span asp-validation-for="Plan.MonthlyLimit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Plan.Price" class="control-label"></label>
                        <input asp-for="Plan.Price" class="form-control" />
                        <span asp-validation-for="Plan.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
