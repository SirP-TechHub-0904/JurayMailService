@page
@model JurayMailService.Web.Areas.User.Pages.Projects.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW PROJECT</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="EmailProject.Name" class="control-label"></label>
                        <input asp-for="EmailProject.Name" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="EmailProject.Name" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="EmailProject.Subject" class="control-label"></label>
                        <input asp-for="EmailProject.Subject" class="form-control" />
                        <span asp-validation-for="EmailProject.Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label d-block">
                            Template (Note: Add the placeholders below anywhere you want the recipient’s details to appear in your message:)
                            <ul style="margin-top: 5px;">
                                <li>
                                    <code>{{Name}}</code> — full name of the recipient
                                    <button type="button" class="btn btn-sm btn-light ml-2" onclick="copyText(this, '{{Name}}')">Copy</button>
                                </li>
                              
                                
                            </ul>
                        </label>
                    </div>




                    <div class="form-group">
                        <label asp-for="EmailProject.Template" class="control-label">
                            Template
                        </label>
                        <textarea asp-for="EmailProject.Template" class="form-control summernote"></textarea>
                        <span asp-validation-for="EmailProject.Template" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function copyText(button, text) {
            navigator.clipboard.writeText(text).then(() => {
                const original = button.textContent;
                button.textContent = 'Copied';
                button.disabled = true;
                setTimeout(() => {
                    button.textContent = original;
                    button.disabled = false;
                }, 1500);
            });
        }
    </script>
}
