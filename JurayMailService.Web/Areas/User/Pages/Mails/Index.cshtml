@page
@model JurayMailService.Web.Areas.User.Pages.Mails.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">SUBMITTED MAILS  </h3>

    </div>
    <div class="card-header">

        <h5>
            @if (Model.GroupSendingProject != null)
            {<span>@Model.GroupSendingProject.Date - @Model.GroupSendingProject.EmailProject.Name</span>}
        </h5>
    </div>
    <!-- /.card-header -->


    <div class="card-body">
        <div class="table-responsive">
            <table id="" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Email
                        </th>
                        <th>Submitted</th>
                        <th>Sent</th>
                        <th>Status</th>
                        <th>Retries</th>

                    </tr>
                </thead>

                @{
                    //int sn = 0;
                    int sn = (Model.PageNumber - 1) * Model.PageSize;

                }
                <tbody>
                    @foreach (var item in Model.EmailSendingStatus)
                    {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>

                            <td>

                                <a asp-page="./Info" asp-route-id="@item.Id" asp-route-mxs="@item.MessageId">
                                    @Html.DisplayFor(modelItem => item.Email)

                                </a>

                            </td>


                            <td>
                                @item.SubmittedDate.ToString("dd/MM/yyyy hh:mm tt")
                            </td>

                            <td>
                                @if (item.SentDate != null)
                                {
                                    @item.SentDate.Value
                                    @*<span>@item.MessageId</span>*@
                                }
                                else
                                {
                                    <span>---</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SendingStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Retries)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.TotalPages > 1)
            {
                <nav style="margin-top:20px;">
                    <ul class="pagination">

                        <!-- First page «« -->
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-pagenumber="1"
                               asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                &laquo;&laquo;
                            </a>
                        </li>

                        <!-- Previous page « -->
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-pagenumber="@(Model.PageNumber - 1)"
                               asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                &laquo;
                            </a>
                        </li>

                        <!-- First 3 pages -->
                        @for (int i = 1; i <= Math.Min(3, Model.TotalPages); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-pagenumber="@i"
                                   asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- Ellipsis if many pages -->
                        @if (Model.TotalPages > 6)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }

                        <!-- Last 3 pages -->
                        @for (int i = Model.TotalPages - 2; i <= Model.TotalPages; i++)
                        {
                            if (i > 3)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-page="./Index"
                                       asp-route-pagenumber="@i"
                                       asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                        @i
                                    </a>
                                </li>
                            }
                        }

                        <!-- Next page » -->
                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-pagenumber="@(Model.PageNumber + 1)"
                               asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                &raquo;
                            </a>
                        </li>

                        <!-- Last page »» -->
                        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-pagenumber="@Model.TotalPages"
                               asp-route-groupSendingProjectId="@(Model.GroupSendingProject?.Id)">
                                &raquo;&raquo;
                            </a>
                        </li>

                    </ul>
                </nav>
            }

        </div>
    </div>
</div>
